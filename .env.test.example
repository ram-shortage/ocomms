# Test Environment Configuration
# Copy this file to .env.test and customize as needed

# Database (matches docker-compose.test.yml)
DATABASE_URL=postgresql://postgres:test_password_123@localhost:5432/ocomms_test

# Redis (matches docker-compose.test.yml)
REDIS_URL=redis://localhost:6379

# Authentication (minimum 32 characters for security)
BETTER_AUTH_SECRET=test_auth_secret_minimum_32_chars_long_for_security
BETTER_AUTH_URL=http://localhost:3000

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Email (disabled in test environment)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=test@localhost

# E2E Test Seed Mode
# - unset or empty: Use e2e-seed.ts (minimal data: alice/bob@demo.ocomms.local)
# - "demo": Use demo-seed.ts (comprehensive data: alice.chen@example.com, 500 users, 4 workspaces)
E2E_SEED_MODE=
