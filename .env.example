# Database
# Development: use localhost without SSL
# Production: use db hostname with sslmode=require
DATABASE_URL=postgresql://postgres:changeme@localhost:5432/ocomms
# DATABASE_URL=postgresql://postgres:changeme@db:5432/ocomms?sslmode=require
DB_PASSWORD=changeme

# Auth
BETTER_AUTH_SECRET=generate-a-secret-here
AUTH_SECRET=generate-a-secret-here
BETTER_AUTH_URL=http://localhost:3000

# App URL
# Development: use http://localhost
# Production: use https://your-domain.com
APP_URL=http://localhost
NEXT_PUBLIC_APP_URL=http://localhost
# APP_URL=https://your-domain.com
# NEXT_PUBLIC_APP_URL=https://your-domain.com
# BETTER_AUTH_URL=https://your-domain.com

# SSL/TLS (production)
# Email for Let's Encrypt certificate notifications
CERTBOT_EMAIL=admin@your-domain.com
# Set to 0 for production after testing with staging certs
CERTBOT_STAGING=1

# SMTP (optional for dev)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=

# Redis (optional - falls back to in-memory)
REDIS_URL=redis://localhost:6379

# Web Push VAPID keys (generate with: npx web-push generate-vapid-keys)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@yourdomain.com
NEXT_PUBLIC_VAPID_PUBLIC_KEY=
